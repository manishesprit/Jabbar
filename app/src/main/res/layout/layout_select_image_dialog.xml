<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fab_sheet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/headingTextDialog"
            android:text="@string/select_image_dialog_title" />

        <TextView
            android:id="@+id/txtCamera"
            style="@style/DialogListItem"
            android:drawableLeft="@drawable/ic_camera_black"
            android:gravity="center_vertical"
            android:text="@string/camera"
            android:textColor="@color/color_title" />

        <TextView
            android:id="@+id/txtGallery"
            style="@style/DialogListItem"
            android:drawableLeft="@drawable/ic_camera_black"
            android:gravity="center_vertical"
            android:text="@string/gallery" />

        <TextView
            android:id="@+id/txtRemove"
            style="@style/DialogListItem"
            android:drawableLeft="@drawable/ic_clear"
            android:gravity="center_vertical"
            android:text="@string/remove" />

    </LinearLayout>

</android.support.v7.widget.CardView>
