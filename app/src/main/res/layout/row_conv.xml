<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/lin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:orientation="horizontal">

        <com.jabbar.Uc.JabbarTextView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/pink_arrow"
            android:tag="100" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="70dp"
            android:background="@drawable/border1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/MarginThree"
            android:paddingLeft="@dimen/MarginSaven"
            android:paddingRight="@dimen/MarginSaven"
            android:paddingTop="@dimen/MarginThree">


            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/txt_message_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/color_title"
                android:textSize="@dimen/textMedium1"
                emojicon:emojiconSize="@dimen/txtlargeNormal" />  


            <com.jabbar.Uc.JabbarTextView
                android:id="@+id/txt_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_message"
                android:layout_gravity="right"
                android:tag="100"
                android:textColor="@color/color_title_sub"
                android:textSize="@dimen/textSmall" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="70dp"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/MarginThree"
            android:paddingLeft="@dimen/MarginSaven"
            android:paddingRight="@dimen/MarginSaven"
            android:paddingTop="@dimen/MarginThree">


            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/txt_message_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/color_title"
                android:textSize="@dimen/textMedium1"
                emojicon:emojiconSize="@dimen/txtlargeNormal" />  


            <com.jabbar.Uc.JabbarTextView
                android:id="@+id/txt_time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:drawablePadding="@dimen/MarginThree"
                android:tag="100"
                android:textSize="@dimen/textSmall" />

        </LinearLayout>

        <com.jabbar.Uc.JabbarTextView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/green_arrow"
            android:tag="100" />

    </LinearLayout>
</LinearLayout>